#:import utils kivy.utils

<TextInput>
    multiline: False
    background_color: utils.get_color_from_hex("#FCF7F8")
    font_name: "OpenSans-Semibold"

<Label>
    background_normal: ""
    background_color: (206/255, 211/255, 220/255, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    color: (0, 0, 0, 1)
    font_name: "OpenSans-Semibold"
<Button>
    background_normal: ""
    background_color: utils.get_color_from_hex("#90C2E7")
    font_name: "OpenSans-Semibold"

<RoundedButton@Button>
    background_color: (0,0,0,0)
    color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: (163/255,22/255,33/255,1) if self.state=='normal' else (80/255,0/255,0/255,1)
        BorderImage:
            border: 25,25,25,25
            source: 'shadow.png'
            pos: self.x+2, self.y-8
            size: self.width+6, self.height+6
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

WindowManager:
	LoginWindow:
	MainWindow:


<LoginWindow>:
	name: "loginWindow"
    login: login
    password: password
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 150
        spacing: 10
        Label:
#            id = loginLabel
            text: "USER:"
            font_size: 20
        TextInput:
            id: login
        Label:
            text: "PASSWORD:"
            font_size: 20

        TextInput:
            id: password
        RoundedButton:
            text: "LOGIN"
            font_size: 30
            on_release:
                app.root.current = root.loginPress()
                root.manager.transition.direction = "left"


<MainWindow>:
	name: "mainWindow"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Second Screen"
			font_size: 32

		Button:
			text: "Go Back"
			font_size: 32
			on_release:
				app.root.current = "loginWindow"
				root.manager.transition.direction = "right"


#you can use the root.manager.get_screen('screen_name').widget_id.parameter (like root.manager.get_screen('main_window').label.text) inside your .kv file