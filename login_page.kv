#:import utils kivy.utils

<TextInput>
    multiline: False
    background_color: utils.get_color_from_hex("#FCF7F8")
    font_name: "OpenSans-Semibold"
    halign: 'center'
    valign: 'middle'
    font_size: 20
<Label>
    background_normal: ""
    background_color: (206/255, 211/255, 220/255, 1)
#    canvas.before:
#        Color:
#            rgba: self.background_color
#        Rectangle:
#            size: self.size
#            pos: self.pos
    color: (0, 0, 0, 1)
    font_name: "OpenSans-Semibold"
    font_size: 15
<Button>
    background_normal: ""
    background_color: utils.get_color_from_hex("#90C2E7")
    font_name: "OpenSans-Semibold"

<RoundedButton@Button>
    background_color: (0,0,0,0)
    color: (1, 1, 1, 1)
    size_hint_y: None
    height: 50
    canvas.before:
        Color:
            rgba: (163/255,22/255,33/255,1) if self.state=='normal' else (80/255,0/255,0/255,1)
        BorderImage:
            border: 25,25,25,25
            source: 'shadow.png'
            pos: self.x+2, self.y-8
            size: self.width+6, self.height+6
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

WindowManager:
	LoginWindow:
	RegisterWindow:


<LoginWindow>:
	name: "loginWindow"
    login: login
    password: password
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 150
        spacing: 10
        Label:
            id: loginLabel
            text: "USERNAME:"
            font_size: 30
            size_hint_y: None
            height: 50
        TextInput:
            id: login
            hint_text: "ENTER USERNAME"
            size_hint_y: None
            height: 50
        Label:
            id: passwordLabel
            text: "PASSWORD:"
            font_size: 30
            size_hint_y: None
            height: 50
        TextInput:
            id: password
            hint_text: "ENTER PASSWORD"
            password: True
            size_hint_y: None
            height: 50
        RoundedButton:
            text: "LOGIN"
            font_size: 30
            on_release:
                app.root.current = root.loginPress()
                root.manager.transition.direction = "left"


<RegisterWindow>:
	name: "registerWindow"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"
	BoxLayout:
        size: root.width, root.height
	    orientation: "vertical"
        padding: 30
        spacing: 10
        Label:
            text: "REGISTER"
            font_size: 20
            size_hint_y: None
            height: 40
            color: (1, 1, 1, 1)
            pos_hint_y: 0.1
        GridLayout:
            spacing: 5
            cols: 2
            Label:
                id: firstNameLabel
                text: "FIRST NAME:"
            TextInput:
                id: firstName
                hint_text: "ENTER FIRST NAME"
            Label:
                id: secondNameLabel
                text: "SECOND NAME:"
            TextInput:
                id: secondName
                hint_text: "ENTER SECOND NAME"
            Label:
                id: addressLabel
                text: "ADDRESS:"
            TextInput:
                id: address
                hint_text: "ENTER ADDRESS"
            Label:
                id: cityLabel
                text: "CITY:"
            TextInput:
                id: city
                hint_text: "ENTER CITY"
            Label:
                id: stateLabel
                text: "STATE:"
            TextInput:
                id: state
                hint_text: "ENTER STATE"
            Label:
                id: zipcodeLabel
                text: "ZIPCODE:"
            TextInput:
                id: zipcode
                hint_text: "ENTER ZIPCODE"
        Label:
            text: "ROOM INFORMATION"
            font_size: 20
            size_hint_y: None
            height: 30
        GridLayout:
            spacing: 5
            cols: 2
            Label:
                id: roomNumberLabel
                text: "ROOM NUMBER:"
            TextInput:
                id: roomNumber
                hint_text: "choose number window"
                on_text: root.manager.get_screen("registerWindow").ids.firstName.text = self.text
            Label:
                id: statusLabel
                text: "STATUS:"
            TextInput:
                id: status
                hint_text: "dropdown TODO"
            Label:
                id: bookStartDateLabel
                text: "BOOK START DATE:"
            TextInput:
                id: bookStartDate
                hint_text: "calendar popup TODO"
            Label:
                id: bookEndDateLabel
                text: "BOOK END DATE:"
            TextInput:
                id: bookEndDate
                hint_text: "calendar popup TODO"
            Label:
                id: paymentStatusLabel
                text: "PAYMENT STATUS:"
            TextInput:
                id: state
                hint_text: "dropdown TODO"
        RoundedButton:
            text: "REGISTER"
            font_size: 30
            on_release:
                root.registerPress()
#                app.root.current = root.registerPress()
#                root.manager.transition.direction = "left"


